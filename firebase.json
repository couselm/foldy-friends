{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/_next/static/**",
        "destination": "/_next/static/$1"
      },
      {
        "source": "/static/**",
        "destination": "/static/$1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
